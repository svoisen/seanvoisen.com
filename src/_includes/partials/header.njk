<header class="header">
    <div class="logo-wrapper">
        <a href="/" class="home-link">
            {% include "partials/logo.njk" %}
        </a>
    </div>
    <nav class="nav">
        <ul>
            {% for item in navigation.items %}
            {% if item.url == page.url %}
            <li class="active">
            {% else %}
            <li>
            {% endif %}
                <a href="{{ item.url }}">{{ item.title }}</a>
            </li>
            {% endfor %}
        </ul>
    </nav>
</header>
