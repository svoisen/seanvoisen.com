<header class="header">
    <div class="logo-wrapper">
        <a href="/" class="home-link" title="Return home.">
            {% include "partials/logo.njk" %}
        </a>
    </div>
    <nav class="nav">
        <ul>
            {%- set items = navigation.items | navigationItems %}
            {%- for item in items %}
            {%- if item.url == page.url %}
            <li class="nav__item active{% if item.hideOnMobile %} nav__item--hidden{% endif %}">{{ item.title }}</li>
            {%- else %}
            <li class="nav__item{% if item.hideOnMobile %} nav__item--hidden{% endif %}">
                <a href="{{ item.url }}" title="{{ item.description }}">{{ item.title }}</a>
            </li>
            {%- endif %}
            {%- endfor %}
        </ul>
    </nav>
    <div class="theme-toggle">
        <input type="checkbox" id="theme-toggle" class="theme-toggle__input" aria-label="Toggle dark mode">
        <label for="theme-toggle" class="theme-toggle__label">
            <span class="theme-toggle__icon theme-toggle__icon--sun"></span>
            <span class="theme-toggle__icon theme-toggle__icon--moon"></span>
            <span class="theme-toggle__slider"></span>
        </label>
    </div>
</header>
