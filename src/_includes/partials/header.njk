<header class="header">
    <div class="logo-wrapper">
        <a href="/" class="home-link" title="Return home.">
            {% include "partials/logo.njk" %}
        </a>
    </div>
    <nav class="nav">
        <ul>
            {%- set items = navigation.items | navigationItems %}
            {%- for item in items %}
            {%- if item.url == page.url %}
            <li class="active">{{ item.title }}</li>
            {%- else %}
            <li>
                <a href="{{ item.url }}" title="{{ item.description }}">{{ item.title }}</a>
            </li>
            {%- endif %}
            {%- endfor %}
        </ul>
    </nav>
    <div class="theme-toggle">
        <input type="checkbox" id="theme-toggle" class="theme-toggle__input" aria-label="Toggle dark mode">
        <label for="theme-toggle" class="theme-toggle__label">
            <svg class="theme-toggle__icon theme-toggle__icon--sun" aria-hidden="true" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="5"/>
                <path d="m12 1v2m0 18v2M4.22 4.22l1.42 1.42m12.72 12.72l1.42 1.42M1 12h2m18 0h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
            </svg>
            <svg class="theme-toggle__icon theme-toggle__icon--moon" aria-hidden="true" viewBox="0 0 24 24">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
            </svg>
            <span class="theme-toggle__slider"></span>
        </label>
    </div>
</header>
