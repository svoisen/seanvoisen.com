{% macro featuredPostList(items) %}
<ul class="featured-posts">
{% for item in items %}
  <li class="featured-post-card">
    <a href="{{ item.url }}" class="featured-post-link">
      {% if item.data.image %}
      <div class="featured-post-image">
        <img src="{{ item.data.image }}" alt="{{ item.data.title }}" loading="lazy">
      </div>
      {% endif %}
      <div class="featured-post-content">
        <h3 class="featured-post-title">{{ item.data.title }}</h3>
        <time class="featured-post-date" datetime="{{ item.date | w3Date }}">{{ item.date | htmlDate }}</time>
        {% if item.data.description %}
        <p class="featured-post-description">{{ item.data.description }}</p>
        {% endif %}
      </div>
    </a>
  </li>
{% endfor %}
</ul>
{% endmacro %}
