---
layout: base
---

<article class="page">
    <header class="page-header">
        <h1 class="page-title">{{ title }}</h1>
    </header>
    {% if showMetadata != false %}
    <aside class="page-metadata">
        <dl>
            <dt>Last updated</dt>
            <dd>
                <time class="post-timestamp" datetime="{{ page.date }}">{{ page.date | htmlDate }}</time>
            </dd>
            <dt>Length</dt>
            <dd>{{ content | wordStats }}</dd>
            <dt>Summary</dt>
            <dd>{{ description }}</dd>
        </dl>
    </aside>
    {% endif %}
    <div class="page-content">
        {{ content | safe }}
    </div>
</article>
