---
layout: base
---

{%- if (page.filePathStem.split("/")[1] == "blog") %}
    {%- set type = "Blog" %}
    {%- set typelink = "/blog/" %}
{%- else %}
    {%- set type = "Stream" %}
    {%- set typelink = "/stream/" %}
{%- endif %}

{%- from "macros/taglist.njk" import tagList %}
<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-metadata">
            <time class="post-timestamp" datetime="{{ page.date | w3Date }}">{{ page.date | htmlDate }}</time> &middot; {{ content | wordStats }}
        </div>
    </header>
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
{%- include "partials/subscribe.njk" %}