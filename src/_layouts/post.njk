---
layout: base
---

{% if (page.filePathStem.split("/")[1] == "blog") %}
    {% set type = "Blog" %}
    {% set typelink = "/blog/" %}
{% else %}
    {% set type = "Stream" %}
    {% set typelink = "/stream/" %}
{% endif %}

{% from "macros/taglist.njk" import tagList %}

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <aside class="post-metadata">
            <dl>
                <dt>Published</dt>
                <dd>
                    <time class="post-timestamp" datetime="{{ page.date }}">{{ page.date | htmlDate }}</time>
                </dd>
                <dt>Post type</dt>
                <dd><a href="{{ typelink }}">{{ type }}</a></dd>
                <dt>Length</dt>
                <dd>{{ content | wordStats }}</dd>
                <dt>Tags</dt>
                <dd>{{ tagList(tags) }}</dd>
            </dl>
        </aside>
    </header>
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
