{% extends "layouts/base.njk" %}
{% block content %}
    <article class="post">
        <header class="post-header">
            <h1 class="post-title">{{ title }}</h1>
            <aside class="post-metadata">
                <dl>
                    <dt>Published</dt>
                    <dd>
                        <time class="post-timestamp" datetime="{{ page.date }}">{{ page.date | htmlDate }}</time>
                    </dd>
                    <dt>Summary</dt>
                    <dd>{{ description }}</dd>
                    <dt>Tags</dt>
                    <dd>{{ tags | join(", ") }}</dd>
                </dl>
            </aside>
        </header>
        <div class="post-content">
            {{ content | safe }}
        </div>
    </article>
{% endblock %}
